{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "declaration": true,
        "plugins": [
            {
              "name": "typescript-styled-plugin",
              "lint": {
                "validProperties": [
                  "shadow-color",
                  "shadow-opacity",
                  "shadow-offset",
                  "shadow-radius",
                  "padding-horizontal",
                  "padding-vertical",
                  "margin-vertical",
                  "margin-horizontal",
                  "tint-color",
                  "aspect-ratio",
                  "elevation"
                ]
              }
            }
          ]
    },
    "exclude": [
        "lib",
        "e2e",
        "node_modules",
        "test-workspace"
    ]
}